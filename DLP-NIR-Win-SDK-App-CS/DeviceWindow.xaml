<Window x:Class="DLP_NIR_Win_SDK_App_CS.DeviceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLP_NIR_Win_SDK_App_CS"
        mc:Ignorable="d"
        Title="Device Selection" WindowStyle="SingleBorderWindow" FontFamily="Calibri" FontSize="16" ResizeMode="NoResize" SizeToContent="WidthAndHeight" MinWidth="180">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="ListBox_Devices" Margin="10"/>
        <Button x:Name="Button_Connect" Content="Connect" Click="Button_Connect_Click" Grid.Row="1" VerticalAlignment="Bottom" Margin="30,0,30,10"/>

    </Grid>
</Window>
